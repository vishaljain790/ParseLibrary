<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mychattapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/mainlogog"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:name="ChattApp">
        <activity
            android:name="com.example.mychattapp.LoginAndRegister"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="RegisterClass"
            android:screenOrientation="portrait"
            ></activity>
        
        <activity 
            android:name="AfterLogin"
            android:screenOrientation="portrait"
            ></activity>
        
         <activity
            android:name="Chat"
           
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
    </application>

</manifest>